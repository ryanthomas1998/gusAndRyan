<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/mainlayout"
    android:background="#ffffff"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageTest"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/currentMedia"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="25dp"
        android:background="#99EEEEEE"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:elevation="2dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Song:"
            android:id="@+id/crtSngLbl"

            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:gravity="bottom"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="25dp"
            android:text="No Music"
            android:id="@+id/crtSng"
            android:paddingLeft="5dp"
            android:fontFamily="sans-serif-light"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/crtSngLbl"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Artist:"
            android:fontFamily="sans-serif-light"
            android:id="@+id/artistLbl"
            android:textSize="20sp"
            android:layout_below="@+id/crtSngLbl"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="25dp"
            android:text="No Music"
            android:id="@+id/artist"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="5dp"
            android:textSize="20sp"
            android:layout_below="@+id/crtSng"
            android:layout_toEndOf="@+id/artistLbl"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iplbl"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/server_status"
            android:text="No IP Assigned"
            android:layout_below="@+id/artistLbl"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:elevation="2dp"

            android:layout_marginTop="10dp"
            android:layout_below="@+id/artist"
            android:id="@+id/lay1">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip Back"
                android:padding="20dp"
                android:fontFamily="sans-serif-light"
                android:id="@+id/skipBack"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play"
                android:id="@+id/play"
                android:padding="20dp"
                android:fontFamily="sans-serif-light"
                android:layout_centerHorizontal="true"
                android:layout_toEndOf="@+id/skipBack"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:fontFamily="sans-serif-light"
                android:text="Skip Forward"
                android:layout_toEndOf="@+id/play"
                android:id="@+id/skipForward"/>

        </RelativeLayout>
    </RelativeLayout>






</RelativeLayout>

